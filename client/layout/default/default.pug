include ../../mixins/printLocalsSchema
include ../../layout/loader/loader
include ../../layout/nav/nav
include ../../layout/header/header
include ../../layout/footer/footer
include ../../vendor/outdated-browser
include ../../mixins/favicons

doctype html
html(lang=contentControl.language || "en-GB")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="description" content=meta ? meta.description: '')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title || "Poland 2.0 Summit"
    //- add favicons
    +favicons 

    //- Any extra stuff in head - opengraph, meta etc
    block head

    block style
      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/6.0.0/normalize.min.css")
      //- link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
      //- link(rel="stylesheet", href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css")
      //- link(rel="stylesheet", href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
      if env === 'production'
        link(rel="stylesheet", href=assets("main.css"))
          
    block scripts
      include ../../vendor/outdated-browser
      //- client bundle
      //- vendor/commons bundles
      script(src=assets('commons.js'))
      //- scripts used on all pages
      script(src=assets('main.js'))



  body
    +loader
    +header
    .site-container
      main
        block content
      +footer

    if env === 'production'
      //- include an outdated browser warning
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', '#{trackingId}', 'auto');
        ga('send', 'pageview');





  
