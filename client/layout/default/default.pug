include ../../mixins/printLocalsSchema
include ../../layout/loader/loader
include ../../layout/nav/nav
include ../../layout/header/header
include ../../layout/footer/footer
include ../../vendor/outdated-browser
include ../../mixins/favicons
include ../../mixins/script

doctype html
html(lang=contentControl.language || "en-GB").no-js
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="description" content=meta ? meta.description: '')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title || "Poland 2.0 Summit"
    //- add favicons
    +favicons 

    //- Any extra stuff in head - opengraph, meta etc
    block head

    block style
      //- Normalize.css
      link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/6.0.0/normalize.min.css")
      //- Fonts
      link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,600,700&amp;subset=latin-ext")
      link(rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
      link(rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css")
      //- Cookie consent styling
      link(rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.css")

      if env === 'production'
        link(rel="stylesheet", href=assets("main.css"))
          
    block scripts
      include ../../vendor/outdated-browser
      //- client bundle
      //- vendor/commons bundles
      +script('commons.js')
      //- scripts used on all pages
      +script('main.js')



  body
    //- +loader
    +header
    .site-container
      .container
        noscript.no-js-warning
          p.
            This site requires JavaScript for best user experience. Because you have disabled
            JavaScript, your experience may be limited.
      main
        block content
      +footer

    if env === 'production'
      //- include an outdated browser warning
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', '#{trackingId}', 'auto');
        ga('send', 'pageview');
      script(src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.js")
      script.
        window.addEventListener("load", function(){
        window.cookieconsent.initialise({
          "palette": {
            "popup": {
              "background": "#e2445c",
              "text": "#ffffff"
            },
            "button": {
              "background": "#ffffff",
              "text": "#000000"
            }
          },
          "theme": "classic",
          "content": {
            "dismiss": "Got it!"
          }
        })});

  
