extends ../layouts/default
include ../mixins/opengraph
block head
	+opengraph(title, 'http://www.poland20.com/contact', null , "Do you have questions, or would like to tell us something? Would you like to participate or volunteer? Contact the Poland 2.0 team")

block intro
	.container.padded.top
		h1.lighter.uppercase Contact Us
		

block content
	.container
		if enquirySubmitted
			h2 Thanks for getting in touch!
			p We will get back to you shortly.
		else
			p Drop us an email or use the contact form.
			.row.contact
				.small-12.medium-6
					.contact-frame
						h2 Contact e-mails
						h3 General contact
						p
							a.mailto(href="mailto:contact@poland20.com") contact@poland20.com
						h3 Project Leader
						p Martyna Piotrowska 
							a.mailto(href="mailto:martyna.piotrowska@poland20.com") martyna.piotrowska@poland20.com
						h3 Programme/Agenda
						p Agata Nyga 
							a.mailto(href="mailto:agata.nyga@poland20.com") agata.nyga@poland20.com
						h3 Sponsorship
						p Agata Wasiak 
							a.mailto(href="mailto:agata.wasiak@poland20.com") agata.wasiak@poland20.com
						h3 Website 
						p.small Found a bug on the page? Please let us know!
						p Jakub Kowalczyk 
							a.mailto(href="mailto:jakub.kowalczyk@poland20.com") jakub.kowalczyk@poland20.com
					

				.small-12.medium-6
					.contact-frame
						h2 Contact Form
						form(method='post')
							input(type='hidden', name='action', value='contact')
							.row
								.medium-6.small-12.columns
									.p20-textfield
										input(type='text', name='name.full', value=formData['name.full'] class=validationErrors.name ? 'is-invalid-input' : null) 
										label(class=validationErrors.name ? 'is-invalid-label' : null) Name
								.medium-6.small-12.columns
									.p20-textfield
										input(type='email', name='email', value=formData.email, class=validationErrors.email ? 'is-invalid-input' : null)
										label(class=validationErrors.email ? 'is-invalid-label' : null) Email
								.medium-6.small-12.columns
									.p20-textfield 
										input(type='tel', name='phone', value=formData.phone, placeholder='(optional)')
										label Phone	
							.row
								.small-12.columns
									.p20-select
										select(name='enquiryType' class=validationErrors.enquiryType ? 'is-invalid-input' : null)
											option(value='') (select one)
											each type in enquiryTypes
												option(value=type.value, selected=formData.enquiryType == type.value)= type.label
										label(class=validationErrors.enquiryType ? 'is-invalid-label' : null) What are you contacting us about?
							.row
								.small-12.columns
									.p20-textfield
										textarea(name='message', class=validationErrors.message ? 'is-invalid-input' : null, placeholder='Leave us a message...' rows=4 ).form-control= formData.message
										label(class=validationErrors.message ? 'is-invalid-label' : null) Message
							.row
								.columns: button(type='submit').button.primary.hollow.uppercase Send


