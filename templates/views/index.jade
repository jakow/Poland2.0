extends ../layouts/default
include ../mixins/opengraph
include ../mixins/social
include ../mixins/banner
include ../mixins/people
include ../mixins/countdown


mixin formatAddress(name, address)
	div= name
	div= address.street1
	div= address.street2
	div= address.suburb+' '+address.postcode

block head
	+opengraph(title, 'http://poland20.com/', null , "Poland 2.0 Summit is an annual event held in Autumn at Imperial College London. Its main purpose is to discuss how innovation and new technologies impact and add value to start-ups, entrepreneurship, public policy and many other areas of public life in Poland.")
	meta(name="description" content="An annual event focusing on how innovation and new technologies impact and add value to start-ups, entrepreneurship, public policy and life in Poland.")

	


block content
	//- previous img: https://res.cloudinary.com/dg1royeho/image/upload/c_scale,q_auto,w_1600,fl_progressive/v1462402246/imperial_nostock_lhp5ll.jpg
	+banner("home-banner", "https://res.cloudinary.com/dg1royeho/image/upload/c_scale,q_auto,w_1600,fl_progressive/v1462402246/imperial_nostock_lhp5ll.jpg", true, true, "center", content.backgroundVideo.enable ? "with-video" : "")
			.banner-content.lighter.uppercase
				img(src='https://res.cloudinary.com/dg1royeho/image/upload/v1465242752/logo_to4xlx.svg').logo-large.animate
				h1.animate.smaller Poland 2.0
					div.lighter Summit
				div.time-place.animate
						//- TODO HTML date tag when date becomes available
						if currentEdition
							div= currentEdition.date.dateString 
							div= currentEdition.venue.name
				//- div.spaced-buttons.animate
					//- a.white.hollow.responsive.button.uppercase(href='/speakers') Speakers
					//- a.white.hollow.responsive.button.uppercase(href='/tickets') Tickets
					//- a.white.hollow.responsive.button.uppercase(href='/showcase-your-idea') Showcase your idea at Poland 2.0
					a.white.hollow.responsive.button.uppercase.watch-video Watch the promo video
			
				if content.ticketsLive
					p.lead.uppercase.lighter= content.ticketMessage
					if content.countdown
						+countdown()(id="countdown")

				.button-group.stacked-for-small(data-magellan data-bar-offset="48" data-animation-duration="300" data-deep-linking="true")
					if content.ticketsLive
						a.hollow.white.responsive.button.uppercase.lighter.press-down(href=content.ticketsUrl) Get the tickets
					if (speakers.keynote.length || speakers.regular.length) && content.speakerMenuButton
						a.hollow.white.responsive.button.uppercase.lighter.press-down(href="#speakers") See the speakers




			if content.backgroundVideo.enable
				.flex-video(style="height: 133%; top: 50%; transform: translateY(-50%);")
					#banner-video
				//- | <iframe id="banner-video" width="560" height="315" src="https://www.youtube.com/embed/g54bTIP27dw?controls=0&loop=1&playsinline=0&showinfo=0&autohide=1" frameborder="0" allowfullscreen></iframe>
				//- .video-overlay
					video(autoplay, muted, loop)
						source(src="https://video-bru2-1.xx.fbcdn.net/v/t43.1792-2/13947029_497787583763969_1848925356_n.mp4?efg=eyJybHIiOjE1MDAsInJsYSI6MTAyNCwidmVuY29kZV90YWciOiJzdmVfaGQifQ%3D%3D&rl=1500&vabr=687&oh=43f426c5f81de235cb8ec0166c3ae1d0&oe=57BA3D06" type="video/mp4")
					
		
	
		
		.padded.container
					!= content.homepageText 

		section.gray-bg
			.row(style="max-width: 100%")
				.medium-6.small-12
					.container.left.half.padded
						h3.underlined.uppercase.center.lighter When
						.row.ev-info
							.columns.shrink
								img(alt="Time" src="http://res.cloudinary.com/dg1royeho/image/upload/v1472719194/time_yuo9es.svg")
							.columns.align-self-middle
								div(style="font-size: 1.2rem")= currentEdition.date.dateString
						h3.underlined.uppercase.center.lighter Where
						.row.ev-info.align-middle
							.columns.shrink
								img(alt="Place" src="http://res.cloudinary.com/dg1royeho/image/upload/v1472716642/map-marker_q0clo7.svg")
							.columns.align-self-middle
									+formatAddress(currentEdition.venue.name, currentEdition.venue.location)


				.medium-6.small-12
					iframe(width="100%" height="436px" frameborder="0" style="border:0; margin: 0 0 -6px 0"
  						src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD7BTpNAwhuLMiamNGEQgfiXP7SiCKIKkw&q="+currentEdition.venue.location.street1+','+currentEdition.venue.location.postcode allowfullscreen)

	

	//- MC signup form
	if content.ticketRegistrationSignup	
		section.dark-bg.padded
			.container
				h2.center.uppercase.underlined.lighter(style="color: white;") Reserve your tickets now!
				.row
					.column.small-12.medium-6
						p Sign up with your email address in order to secure your tickets now, before the sales begin!
						.row(style="justify-content:center")
							.column.shrink
								img(src="http://res.cloudinary.com/dg1royeho/image/upload/v1471194817/ticket_iljdkj.svg", style="max-height: 300px; display: inline-block")
							//- .column
								img(src="http://res.cloudinary.com/dg1royeho/image/upload/v1471287186/newsletter_pbhujz.svg", style="max-height: 300px; display: inline-block")
								
					.column.small-12.medium-6.align-self-middle(style="display: flex; justify-content: center; align-items: center; padding: 0")
						include ../mixins/mc-signup.html

	
	
	if speakers.keynote.length || speakers.regular.length
		section.divider-bottom.padded(id="speakers" data-magellan-target="speakers")
			.container
			
				if speakers.keynote.length
					h2.center.uppercase.underlined.lighter Keynote speakers
					ul.people-grid.flex-center
						each speaker in speakers.keynote
							+keynoteSpeaker(speaker)
					each speaker in speakers.keynote					
						.large.reveal.people-reveal(id="modal"+speaker.slug, data-reveal, data-animation-in="slide-fade-in" data-animation-out="slide-fade-out")
							//- .row
							//- .columns.small-12.shrink.center
							.photo-container
								.photo-large: img(src=speaker.photo.secure_url)
							//- .columns
							.info
								h3.uppercase= speaker.name
								p.lead.lighter= speaker.position
								p.lighter= speaker.presentationTopic
								.description: != speaker.description
							button.button.hollow.close-button.medium.secondary(data-close aria-label="Close modal" type="button")
								span.close-icon(aria-hidden="true")
				if speakers.regular.length
					h2.center.uppercase.underlined.lighter Speakers
					ul.people-grid
						each speaker in speakers.regular
							+speaker(speaker)
					each speaker in speakers.regular					
						.large.reveal.people-reveal(id="modal"+speaker.slug, data-reveal, data-animation-in="slide-fade-in" data-animation-out="slide-fade-out")
							//- .row
							//- .columns.small-12.shrink.center
							.photo-container
								.photo-large: img(src=speaker.photo.secure_url)
							//- .columns
							.info
								h3.uppercase= speaker.name
								p.lead.lighter= speaker.position
								p.lighter= speaker.presentationTopic
								.description: != speaker.description
							button.button.hollow.close-button.medium.secondary(data-close aria-label="Close modal" type="button")
								span.close-icon(aria-hidden="true")



		if content.agendaActive
			section.divider-bottom
				h2.underlined.uppercase.center.lighter Agenda
				.agenda-container
					each day in agenda
						h3= day.caption

						ul.agenda-accordion(data-accordion, data-allow-all-closed="true" data-multi-expand="true")
							each entry in day.content
								li.agenda-accordion-item(class="accordion-item" data-accordion-item)
									a.agenda-accordion-title(href="#")
										div!=entry.time
										div!=entry.briefDescription
										.open-close: .open-close-icon
									.agenda-accordion-content(data-tab-content)
										if entry.speaker
											p Speaker(s): 
												strong=entry.speaker
										p!= entry.detailedDescription
										


		if content.testimonials
			section.testimonials.divider-bottom
				ul.unstyled
					each testimonial in content.parsedTestimonials
						li
							blockquote.large-quote
								p!= testimonial.quote
								footer= testimonial.author
					

		section.padded
			p.center.lead Join us on social media to receive updates about what's happening during Poland 2.0 Summit!
			.row#social-banner
				a(href='https://www.facebook.com/EEESummit/').like-facebook.button.large Like us on Facebook
				a(href='https://twitter.com/poland20summit').follow-twitter.button.large Follow us on Twitter

					//- +twitterFollow	
		
		//- section#sponsors.padded
		//- 	h2.uppercase.lighter.center Sponsors
		//- 	//- if sponsors.length
				//- ul
				//- 	each sponsor in sponsors
				//- 		li 
				//- 			a(href=sponsor.url)
				//- 				span.sr-only=sponsor.name
				//- 				img(src=sponsor.logo.url)


	



		block js
			//- script(src="js/mc.js")
			if content.backgroundVideo.enable
				script.
					var videoId = "#{content.backgroundVideo.id}";
				script(src="/js/banner-video.js")
			if content.countdown
				+countdownScript(content.countdownDate)





