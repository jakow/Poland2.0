mixin speaker(speaker)
	li.speaker
		if speaker.description
			a(data-open="modal"+speaker.slug).card
				if speaker.photo.url
				.image
					img(src=speaker.photo.url)
			.content 
				.header.uppercase= speaker.name
				.position= speaker.position
				.presentation= speaker.presentation
		else
			span.card
				if speaker.photo.url
					.image
						img(src=speaker.photo.url)
				.content
					.header.uppercase= speaker.name
					.position= speaker.position
					.presentation= speaker.presentation


