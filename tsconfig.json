{
    "compilerOptions": {
        "lib": ["es2015", "es2016", "es2017"],
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "allowSyntheticDefaultImports": false,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
      "./@types/**/*"
      "models/**/*",
      "./**/*"
    ],
    "files": [
      "./@types/keystone/index.d.ts",
      "./@types/keystone-utils/index.d.ts",
      "./@types/mongoose/index.d.ts",
      "./config.ts",
      "./index.ts"
    ],
    "exclude": [
        "node_modules",
        "test",
        "client"
    ]
}
