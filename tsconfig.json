{
  "compilerOptions": {
      "lib": ["es2016", "dom"],
      "outDir": "./build/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es5",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false,
      "allowJs": true,
      "jsx": "react",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "diagnostics": true,
      "downlevelIteration": true
  },
  "exclude": [
      "node_modules"
  ]
}
